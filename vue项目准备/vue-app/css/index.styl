@import './reset.css'
@import './mixins.styl'
$mainColor = #02a774
html, body
  overflow hidden
  #app
    width 100%
    height 100%
    #content
      width 100%
      height 100%
      section
        width 100%
        height 100%
        position absolute
        left 0
        top 0
        display none
        &.on
          display block
        .header
          width 100%
          height 50px
          background-color $mainColor
          .headerNav
            width 100%
            height 40px
            display flex
            justify-content space-around
            align-items center
            flex 1
            color white
            font-size 20px
            p
              width 100%
              height 100%
              text-align center
              line-height 50px
        .swiper-container
          height 200px
          .swiper-wrapper
            .swiper-slide
              height 180px
              clearFix()
              .slideList
                float left
                width 25%
                height 50%
                .slideItem
                  display flex
                  justify-content center
                  align-items center
                  flex-direction column
                  img
                    width 50px
                    height 50px
                    margin-top 20px
                  span
                    font-size 13px
          .swiper-pagination
            width 100%
            margin-top 10px
            span
              background-color $mainColor
    #footer
      top-border-1px(#ddd)
      width 100%
      height 60px
      position fixed
      left 0
      bottom 0
      display flex
      .footerItem
        display flex
        justify-content center
        align-items center
        flex 1
        flex-direction column
        &.active
          color $mainColor
        .iconfont
          font-size 25px
        .footerText
          margin-top 5px
